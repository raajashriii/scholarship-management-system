<p id="notice"><%= notice %></p>

<h1>Listing Tests</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Op1</th>
      <th>Op2</th>
      <th>Op3</th>
      <th>Op4</th>
      <th>Ans</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.question %></td>
        <td><%= test.op1 %></td>
        <td><%= test.op2 %></td>
        <td><%= test.op3 %></td>
        <td><%= test.op4 %></td>
        <td><%= test.ans %></td>
        <td><%= link_to 'Show', test %></td>
        <td><%= link_to 'Edit', edit_test_path(test) %></td>
        <td><%= link_to 'Destroy', test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Take Test', new_test_path %>
